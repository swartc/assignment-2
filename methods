	public static int stockBuy(int n) {

		int sum = 0;

		sum = stock - n;

		return sum;
	}

	public static int stockRent(int n) {

		int sum = 0;

		sum = stock + n;

		return sum;
	}


	public static int sell(int n) {

		int one = 0;
		if( n == 1) 
		{
			one = one + 20;
			return one;
		}

		int two = 0;
		if(n == 2)
		{
			two = 34*2;
			return two;
		}

		int three = 0;
		if(n == 3)
		{
			three = three + 80;
			return three;
		}

		int four = 0;
		if(n == 4)
		{
			four = 34*4;
			return four;
		}

		int five = 0;
		if(n==5)
		{
			five = 34*5;
			return five;
		}

		int six = 0;
		if(n==6)
		{
			six = six + 150;
			return six;
		}



		return n;
	}

	public static int Buy(int n) { // purchase humans method


		int one = 0;
		if( n == 1) 
		{
			one = one + 34;
			return one;
		}

		int two = 0;
		if(n == 2)
		{
			two = 34*2;
			return two;
		}

		int three = 0;
		if(n == 3)
		{
			three = three + 80;
			return three;
		}

		int four = 0;
		if(n == 4)
		{
			four = 34*4;
			return four;
		}

		int five = 0;
		if(n==5)
		{
			five = 34*5;

package skynet;

public class Methods {

	// stock
	
	static int F8ft =6; // F = Foam
	static int F6ft =4;
	static int F5ft =9;

	static int H8ft =4; // H = Hard 
	static int H6ft =5;
	static int H5ft =2;
	
	static int HardStock = H8ft + H6ft + H5ft;
	static int FoamStock = F8ft + F6ft + F5ft;
	
	static int stock = FoamStock + FoamStock;

	// prices buy

	static int F8ftP = 150;
